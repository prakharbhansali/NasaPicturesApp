<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewStyle_Bold_16_PrimaryColor">
        <item name="textViewFontFamily">@string/bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewStyle_Bold_12_White">
        <item name="textViewFontFamily">@string/bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewStyle_Regular_10_Black">
        <item name="textViewFontFamily">@string/regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewStyle_Light_8_Black">
        <item name="textViewFontFamily">@string/light</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewStyle_Regular_12_PrimaryColor">
        <item name="textViewFontFamily">@string/regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>